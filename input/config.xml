<?xml version='1.0' encoding='UTF-8'?>
<mardyn version="20100525">

    <refunits type="SI">
        <length unit="nm">0.1</length>
        <mass unit="u">1</mass>
        <energy unit="K">1</energy>
    </refunits>

    <simulation type="MD">
        <integrator type="Leapfrog">
            <!-- MD ODE integrator -->
            <timestep unit="reduced">0.002</timestep>
        </integrator>

        <run>
            <currenttime>0</currenttime>
            <production>
                <steps>1000</steps>
            </production>
        </run>

        <ensemble type="NVT">
            <!-- Nparticles determined by the input file -->
            <temperature unit="reduced">0.95</temperature>
            <domain type="box">
                <lx>40.0</lx>
                <ly>80.0</ly>
                <lz>40.0</lz>
            </domain>

            <components>
                <moleculetype id="1" name="1CLJ">
                    <site type="LJ126" id="1">
                        <coords>
                            <x>0.0</x>
                            <y>0.0</y>
                            <z>0.0</z>
                        </coords>
                        <mass>1.0</mass>
                        <sigma>1.0</sigma>
                        <epsilon>1.0</epsilon>
                        <shifted>0</shifted>
                    </site>
                    <momentsofinertia rotaxes="xyz">
                        <Ixx>0.0</Ixx>
                        <Iyy>0.0</Iyy>
                        <Izz>0.0</Izz>
                    </momentsofinertia>
                </moleculetype>

            </components>

            <phasespacepoint>
                <generator name="mkTcTS">
                    <layer1>
                        <density>#density#</density>
                    </layer1>
                    <layer2>
                        <density>#density#</density>
                    </layer2>
                </generator>
            </phasespacepoint>
        </ensemble>

        <algorithm>
            <!--
            <parallelisation type="KDDecomposition">
              <updateFrequency>10</updateFrequency>
              <fullSearchThreshold>2</fullSearchThreshold>
            </parallelisation>
            -->
