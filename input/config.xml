            </datastructure>
            <cutoffs type="CenterOfMass">
                <radiusLJ unit="reduced">#cutoff#</radiusLJ>
            </cutoffs>
            <electrostatic type="ReactionField">
                <epsilon>1.0e+10</epsilon>
            </electrostatic>

        </algorithm>

    </simulation>
</mardyn>
